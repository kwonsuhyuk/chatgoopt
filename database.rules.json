{
  "rules": {
    "unreadCounts": {
      "$userId": {
        "$channelId": {
          ".write": "$userId === auth.uid"
        }
      }
    },
    "channels": {
      ".read": "auth != null",
      "$channelId": {
        ".write": "auth !=null"
      }
    },
    "messages": {
      "$channelId": {
        ".read": "auth != null",
        ".indexOn": "timestamp",
        "$messageId": {
          ".write": "auth != null"
        }
      }
    },
    "users": {
      ".read": "auth != null",
      "$uid": {
        ".write": "auth != null && auth.uid === $uid"
      }
    },
    "minigame": {
      "dicegamerank": {
        ".read": "auth != null",
        ".write": "auth != null"
      },
      "typegamerank": {
        ".read": "auth != null",
        ".write": "auth != null"
      }
    }
  }
}
